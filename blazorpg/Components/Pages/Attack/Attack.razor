@page "/attack"
@rendermode InteractiveServer



<h1>Chose your character and enemy to attack</h1>

<h2>Characters</h2>
@if (ListCharacter == null)
{
	<p><em>Enemies list is empty (or not loaded~)</em></p>
}
else
{
	@foreach (var character in ListCharacter)
	{
		<CharacterCard character=character></CharacterCard>
	}
}
<h2>Enemies</h2>
@if(ListEnemy == null)
{
	<p><em>Enemies list is empty (or not loaded~)</em></p>
}
else
{
	foreach (var enemy in ListEnemy)
	{
			<CharacterCard enemy=enemy></CharacterCard>
	}
}

<h1>Enter character id and enemy id to attack: </h1>

    <div class="form-group">
        <label>ID Character: </label>
        <InputNumber @bind-Value="idCharacter" />
    </div>
    <div class="form-group">
        <label>ID Enemy: </label>
		<InputNumber @bind-Value="idEnemy" />
    </div>
	<div class="form-group">
		<input type="submit" class="btn btn-success" value="Attack" @onclick="StartAttack"/>
	</div>


<Modal @ref="@ModalDialog" Title="Attack result">
    <div class="row">
		<h1> @AttackResult </h1>

        <button class="btn btn-primary" @onclick="() => ModalDialog.Close()">Close</button>
    </div>
</Modal>


	