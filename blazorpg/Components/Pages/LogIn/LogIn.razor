@page "/login"
@rendermode InteractiveServer

<p>@message</p>

if (@login)
{
    <h3>Log in</h3>


<EditForm Model="@user" OnValidSubmit="Login" >
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Username: </label>
        <InputText @bind-Value="user.Username" />
        <ValidationMessage For="@(() => user.Username)"/>
    </div>
    <div class="form-group">
        <label>Password: </label>
        <InputText @bind-Value="user.Password" />
        <ValidationMessage For="@(() => user.Password)"/>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Log in"/>
    </div>
    <ValidationSummary/>
</EditForm>

<input type="" class="btn btn-success" value="Register"  @onclick="ComponentSignin"/>
}
else
{
    <h3>Sign in</h3>

<EditForm Model="@user" OnValidSubmit="Signin" >
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Username: </label>
        <InputText @bind-Value="user.Username" />
        <ValidationMessage For="@(() => user.Username)"/>
    </div>
    <div class="form-group">
        <label>Password: </label>
        <InputText @bind-Value="user.Password" />
        <ValidationMessage For="@(() => user.Password)"/>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Sign in"/>
    </div>
    <ValidationSummary/>
</EditForm>
<input type="" class="btn btn-success" value="Log in"  @onclick="ComponentLogin"/>
}


